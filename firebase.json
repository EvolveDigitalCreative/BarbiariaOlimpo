{
  "emulators": {
    "auth": {
      "port": 9098,
      "host": "127.0.0.1"
    },
    "functions": {
      "port": 5002,  
      "host": "127.0.0.1"
    },
    "firestore": {
      "port": 8081,
      "host": "127.0.0.1"
    },
    "ui": {
      "port": 4001,
      "host": "127.0.0.1",
      "enabled": true
    },
    "hub": {
      "port": 4401,
      "host": "127.0.0.1"
    },
    "logging": {
      "port": 4501,
      "host": "127.0.0.1"
    },
    "singleProjectMode": true
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "disallowLegacyRuntimeConfig": true,
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ]
}